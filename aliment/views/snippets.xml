<odoo>
    <!-- Snippets -->
    <template id="s_aliment" name="Aliment">
        <section class="o_aliment">
            <div class="container">
                <h1>Aliment</h1>
                <!--
                <form action="/creer_alliment" method="POST">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <label for="fname">Name:</label><br/>
                    <input type="text" id="name" name="name"/><br/>
                    <input type="submit" value="Submit"/>
                </form>
                <hr></hr>
                 <section class="o_aliment">
                    <div class="container">
                        <div class="aliment_value">Hello</div>
                    </div>
                </section>
                -->
                <form id="creer">
                    <label for="fname">Name:</label><br/>
                    <input type="text" name="name" id="name"/>
                    <button type="submit" id="submit-btn">Ajouter</button>
                </form>

                <hr></hr>

                <h1>Liste des aliments</h1>

                <div class="aliment_value"></div>

                <hr></hr>

                <h1>Modifier un aliment</h1>
                <form id="modifier">
                    <label for="id">ID:</label><br/>
                    <input type="number" name="new_id" id="new_id" /><br/><br/>

                    <label for="new_name">Name:</label><br/>
                    <input type="text" name="new_name" id="new_name"/>

                    <button type="submit" id="submit-btn">Modifer</button>
                </form>
            </div>
        </section>
    </template>

    <!-- Add snippets to menu -->
    <template id="snippet_effect" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t
                    t-snippet="aliment.s_aliment"
                    t-thumbnail="/aliment/static/description/icon.png"
            />
        </xpath>
    </template>

    <!-- Add stylesheet and Javascript -->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link
                    rel="stylesheet"
                    type="text/scss"
                    href="/aliment/static/src/scss/demo_aliment.scss"
            />
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script
                    type="text/javascript"
                    src="/aliment/static/src/js/website.aliment.js"
            />
        </xpath>
    </template>
</odoo>
