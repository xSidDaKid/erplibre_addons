<odoo>
    <!-- Snippets -->
    <template id="s_aliment" name="Aliment">
        <section class="o_aliment">
            <div class="container2">

                <div class="column">
                    <h1>Ajouter un aliment</h1>
                    <form id="creer" style="padding: 20px;">
                        <label for="fname">Name:</label>
                        <br/>
                        <input type="text" name="name" id="name"/>
                        <br></br>
                        <br></br>
                        <button type="submit" id="submit-btn" class="btn btn-primary">Ajouter</button>
                    </form>
                </div>

                <div class="column">
                    <h1>Modifier un aliment</h1>
                    <form id="modifier" style="padding: 20px;">
                        <label for="id">ID:</label>
                        <br/>
                        <input type="number" name="new_id" id="new_id"/>
                        <br/>
                        <br/>
                        <label for="new_name">Name:</label>
                        <br/>
                        <input type="text" name="new_name" id="new_name"/>
                        <br></br>
                        <br></br>
                        <button type="submit" id="submit-btn" class="btn btn-primary">Modifer</button>
                    </form>
                </div>

                <div class="column">
                    <h1>Supprimer un aliment</h1>
                    <form id="supprimer" style="padding: 20px;">
                        <label for="id">ID:</label>
                        <br/>
                        <input type="number" name="old_id" id="old_id"/>
                        <br/>
                        <br/>
                        <button type="submit" id="submit-btn" class="btn btn-primary">Supprimer</button>
                    </form>
                </div>
            </div>

            <div class="container">
                <h1>Liste des aliments</h1>
                <div class="aliment_value">En Chargement</div>
            </div>
        </section>
    </template>

    <!-- Add snippets to menu -->
    <template id="snippet_effect" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t
                    t-snippet="aliment.s_aliment"
                    t-thumbnail="/aliment/static/description/icon.png"
            />
        </xpath>
    </template>

    <!-- Add stylesheet and Javascript -->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link
                    rel="stylesheet"
                    type="text/scss"
                    href="/aliment/static/src/scss/demo_aliment.scss"
            />
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script
                    type="text/javascript"
                    src="/aliment/static/src/js/website.aliment.js"
            />
        </xpath>
    </template>
</odoo>
